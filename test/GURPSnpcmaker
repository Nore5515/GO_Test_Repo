package main

import (
	"fmt"
	"math/rand"
	"strconv"
)

func main() {
	fmt.Println("Hello, playground")
	rand.Seed(1)
	

	toot := new(Character)
	
	gender := rand.Intn(2)
	if gender == 0 {
		toot.gender = "male"
	}
	if gender == 1 {
		toot.gender = "female"
	}
	
	mod := roll()
	ST := roll() + roll() + roll()
	DX:= roll() + roll() + roll()
	IQ:= roll() + roll() + roll()
	HT:= roll() + roll() + roll()
	if mod == 1{
		updateCharacter(toot,ST,DX,IQ,HT,-2)
		toot.mod = "Weak"
	} else if mod == 5{
		updateCharacter(toot,ST,DX,IQ,HT,+2)
		toot.mod = "Tough"	
	}else if mod == 6{
		updateCharacter(toot,ST,DX,IQ,HT,+5)
		toot.mod = "Mini-Boss"
	}else{
		toot.mod = "Avg"
	}
	
	
	
//dont forget carry weight (ST^2)/5
	
	fmt.Println(toot)
	
	
}

func roll() int{
	a := rand.Intn(6)+1
	return a
}

func updateCharacter(toot *Character,ST int,DX int,IQ int,HT int,mod int){
	stringST := strconv.Itoa(ST+mod)
	stringDX := strconv.Itoa(DX+mod)
	stringIQ := strconv.Itoa(IQ+mod)
	stringHT := strconv.Itoa(HT+mod)
	toot.ST = stringST + "(" + strconv.Itoa(ST) + ")"
	toot.DX = stringDX + "(" + strconv.Itoa(DX) + ")"
	toot.IQ = stringIQ + "(" + strconv.Itoa(IQ) + ")"
	toot.HT = stringHT + "(" + strconv.Itoa(HT) + ")"
}

type Character struct{
	gender string
	mod string
	ST string
	DX string
	IQ string
	HT string
	skill int
}
